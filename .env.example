# Claude Brain Configuration
# Copy this file to .env and configure for your environment

# ============================================
# Directory Configuration
# ============================================
BRAIN_DIR=/root/claude-brain
DB_PATH=${BRAIN_DIR}/memory/brain.db
RAG_DIR=${BRAIN_DIR}/rag
RAG_FAISS_DIR=${RAG_DIR}/faiss
LOG_DIR=${BRAIN_DIR}/logs

# ============================================
# Model Settings
# ============================================
# Offline mode for HuggingFace (don't download models during runtime)
HF_HUB_OFFLINE=1
TOKENIZERS_PARALLELISM=false

# Embedding model name
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# API Settings
# ============================================
API_HOST=127.0.0.1
API_PORT=8765

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8765,http://127.0.0.1:8765

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Database
# ============================================
# SQLite pragmas for performance
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=-64000

# ============================================
# FAISS Index Settings
# ============================================
MAX_DOCUMENTS=100
MAX_DOC_SIZE=20000
CHUNK_SIZE=1500
TOP_K=5

# ============================================
# Query Cache (TTL in seconds)
# ============================================
CACHE_TTL_SECONDS=86400

# ============================================
# Feature Flags
# ============================================
ENABLE_AUTO_REBUILD=true
ENABLE_METRICS=true
ENABLE_HOOKS=true
